    <title>{% block title %}Hello AdministrationController!{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}
    {% endblock %}

</head>
<body>
<br/>
<a href="{{ path('home') }}">Revenir sur le site</a>
<h2 style="text-align:center; text-decoration:underline">

    {% block specification %}

    {% endblock %}
</h2>
<hr/>
<!-- vertical navbar -->
