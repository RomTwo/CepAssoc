<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">


    <title>{% block title %}Hello AdministrationController!{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}
    {% endblock %}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
<br/>
<h2 style="text-align:center; text-decoration:underline">
    {% block specification %}

    {% endblock %}
</h2>
<hr/>
<!-- vertical navbar -->
<div class="row">
    <div class="col-2" style="height:100%">
        <nav class="navbar bg-light">
            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_adherents') }}">Adhérents</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_activities') }}">Activités</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_timeSlots') }}">Créneaux</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_events') }}">Evènements</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_accounts') }}">Comptes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_adherent_competiteurs') }}">Plugin</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="col">
        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

{{ encore_entry_script_tags('app') }}


{% block javascripts %}{% endblock %}
</body>
</html>
 