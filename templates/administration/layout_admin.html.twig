<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">

    <title>CEP Admin - {{ block('title') }}</title>
    {{ encore_entry_link_tags('admin') }}
    {{ encore_entry_link_tags('layout_admin') }}


    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/dashboard/">

    {% block stylesheets %}{% endblock %}
</head>

<body>
<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{ path('admin_home') }}">CEP Administration</a>
    <ul class="navbar-nav px-3 test">
        <li class="nav-item text-nowrap mobile-nav">
            <a class="nav-link" href="{{ path("admin_home") }}">Accueil</a>
        </li>
        <li class="nav-item text-nowrap ">
            <a class="nav-link" href="{{ path("security_deconnexion") }}">Déconnexion</a>
        </li>
    </ul>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_home') }}">
                                Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_adherents') }}">
                                Adhérents
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_activities') }}">
                                Activités
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_events') }}">
                                Evénements
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_accounts') }}">
                                Comptes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_adherent_competiteurs') }}">
                                Plugin
                            </a>
                        </li>
                    {% endif %}
                </ul>
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Navigation</span>
                    <a class="d-flex align-items-center text-muted" href="#">
                        <span data-feather="plus-circle"></span>
                    </a>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("home") }}">
                            Retour sur le site
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">{{ block('title') }}</h1>
            </div>
            {% include('notifications/notifications.html.twig') %}
            {{ block('body') }}


        </main>
    </div>
</div>
</body>

{{ encore_entry_script_tags('app') }}
{{ encore_entry_script_tags('admin') }}
{{ encore_entry_script_tags('layout_admin') }}
{{ encore_entry_script_tags('popup') }}

{% block javascripts %}{% endblock %}

</html>
 