                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_adherents') }}">Administration</a>
                </li>
            {% endif %}
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <button class="btn btn-sm btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
        <a class="btn btn-sm btn-danger" href="{{ path('security_deconnexion') }}">DÃ©connexion</a>
