<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    <meta content="" name="description">
    <meta content="" name="author">

    <title>CEP -
        {% block title %}{% endblock %}
    </title>
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('base') }}
    {% block stylesheets %}{% endblock %}

</head>
<body>
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#">CEP Gymnastique</a>
        <button aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"
                class="navbar-toggler" data-target="#navbarResponsive" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('registration') }}">Formulaire d'inscription</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('account_update') }}">Mon compte</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('event_index') }}">Évènements</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_home') }}">Administration</a>
                    </li>
                {% elseif is_granted('ROLE_MODERATOR') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_activities_moderator') }}">Administration</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('security_deconnexion') }}">Deconnexion</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Page Content -->
<div class="container-fluid content">
    {% include('notifications/notifications.html.twig') %}

    {% block body %}{% endblock %}
</div>
<footer class="py-2 footer">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
    </div>
</footer>

{{ encore_entry_script_tags('app') }}
{{ encore_entry_script_tags('base') }}
{{ encore_entry_script_tags('popup') }}
{% block javascripts %}{% endblock %}
</body>
</html>
