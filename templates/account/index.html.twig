{% extends 'base.html.twig' %}

{% block title %}Hello SiteRegisterController!{% endblock %}

{% block body %}
    <div>
        {% if msg is defined and msg is not null %}
            {{ msg }}
        {% endif %}

        {{ form_start(form) }}

        <div class="container mt-4">
            <div class="form-group pb-3">
                <div class="container-fluid">
                    <h4>Informations générales : </h4>
                    <div class="row">
                        <div class="col-2">
                            {{ form_label(form.firstName) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.firstName, {'attr': {'placeholder': "Prenom"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.lastName) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.lastName, {'attr': {'placeholder': "Nom"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.lastName) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.sex) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.sex) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.sex) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.birthDate) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.birthDate) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.birthDate) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.zipCode) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.zipCode, {'attr': {'placeholder': "Code Zip"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.zipCode) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.address) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.address, {'attr': {'placeholder': "Adresse"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.address) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.email) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.email, {'attr': {'placeholder': "Email"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.city) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.city, {'attr': {'placeholder': "Ville"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.city) }}
                    </div>
                    <div class="row mt-3">
                        <div class="col-2">
                            {{ form_label(form.password) }}
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.password, {'attr': {'placeholder': "Mot de passe"}}) }}
                        </div>
                    </div>
                    <div class="row ml-1">
                        {{ form_errors(form.password) }}
                    </div>
                    <div class="row mt-3 ml-1 align-items-center">
                        <div class="col-auto">
                            <input type="checkbox" id="registration" name="registration"> Souhaitez-vous devenir membre de l'association ?
                        </div>
                    </div>
                    <div class="row ml-2">
                        <div class="col-auto">
                            <button id="previous" type="button" class="btn btn-primary">Précédent</button>
                        </div>
                        <div class="col-auto">
                            <button id="next" type="button" class="btn btn-primary">Suivant</button>
                        </div>
                        <div class="col-auto">
                            {{ form_widget(form.valid) }}
                        </div>
                        <input id="step" value="1" hidden>
                    </div>
                </div>
            </div>
        </div>

        <div id="step1">
            <div class="container mt-3">
                <div class="form-group pb-3">
                    <div class="container-fluid">
                        <h4>Type de demande : </h4>
                        <div class="row justify-content-md-center">
                            {{ form_widget(form.children[0].registrationType) }}
                        </div>
                        <div class="row ml-1">
                            <small id="registrationTypeHelp" class="form-text helper"><span class="badge badge-danger">Erreur</span>
                                Il faut séléctionner un choix parmi la liste.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container mt-4">
                <div class="form-group pb-3">
                    <div class="container-fluid">
                        <h4>Informations générales : </h4>
                        <div class="row">
                            <div class="col-6">
                                {{ form_widget(form.children[0].firstName) }}
                            </div>
                        </div>
                        <div class="row ml-1">

                            <small id="firstNameTypeHelp" class="form-text helper"><span
                                        class="badge badge-danger">Erreur</span> Le prénom doit être rempli.
                            </small>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6">

                            </div>
                        </div>
                        <div class="row ml-1">
                            <small id="lastNameTypeHelp" class="form-text helper"><span
                                        class="badge badge-danger">Erreur</span> Le nom de famille doit être rempli.
                            </small>

                        </div>
                        <div class="row mt-3">
                            <div class="ml-3">
                                <p>Date de naissance : </p>
                            </div>
                            <div class="col-6">

                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="ml-3">
                                <p>Genre : </p>
                            </div>
                            <div class="col-6">

                            </div>
                        </div>
                        <div class="row ml-1">
                            <small id="sexTypeHelp" class="form-text helper"><span
                                        class="badge badge-danger">Erreur</span>
                                Il faut séléctionner un choix parmi la liste.
                            </small>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('account') }}
{% endblock %}
