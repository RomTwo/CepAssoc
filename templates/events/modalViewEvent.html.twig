<div class="modal fade" id="modalViewEvent{{ event.id }}" tabindex="-1" role="dialog"
     aria-labelledby="modalViewEventLabel{{ event.id }}" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalViewEventLabel{{ event.id }}">Détails de l'évènement</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="alert alert-secondary" role="alert">
                        <div class="row justify-content-center">
                            Intitulé : {{ event.name }}
                        </div>
                        <div class="row justify-content-center">
                            Début : {{ event.startDate | date("d/m/Y H:i") }}
                        </div>
                        <div class="row justify-content-center">
                            Fin : {{ event.endDate | date("d/m/Y H:i") }}
                        </div>
                        <div class="row justify-content-center">
                            <a id="addressLink" href="#modalMaps" data-toggle="modal"
                               data-target="#modalMaps">
                                Lieu : {{ event.address }}</a>

                        </div>
                        <div class="row justify-content-center">
                            Description : {{ event.description }}
                        </div>
                        <div>
                            {% for file in event.documents %}
                                <div class="row justify-content-center">
                                    <a target="_blank" rel="noopener noreferrer"
                                       href="{{ asset('uploads/' ~ file.id) }}">{{ file.name }}</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
