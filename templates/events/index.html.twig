{% extends 'base.html.twig' %}

{% block body %}
    <!-- DataTable -->
    <table id="events" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Début</th>
            <th>Fin</th>
            <th>Adresse</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.name }}</td>
                <td>le {{ event.startDate | date("d/m/Y H:i") }}</td>
                <td>le {{ event.endDate | date("d/m/Y H:i") }}</td>
                <td>{{ event.address }}</td>
                <td>{{ event.description }}</td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal"
                            data-target="#modalParticipate{{ event.id }}">
                        <i class="fas fa-eye"></i>
                    </button>
                    <a class="btn btn-success" href="{{ path('event_participate', {id:event.id}) }}"><i
                                class="fas fa-vote-yea"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Nom</th>
            <th>Début</th>
            <th>Fin</th>
            <th>Adresse</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </tfoot>
    </table>

{% endblock %}

    {% block javascripts %}
        <script>
            $(document).ready(function () {
                $('#events').DataTable();
            });
        </script>
    {% endblock %}